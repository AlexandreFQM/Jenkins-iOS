# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'xpto' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!
  
  # Pods for xpto
  
  pod 'AWSAuth'
  pod 'AWSCore'
  pod 'AWSMobileClient'
  pod 'AWSPinpoint'
  pod 'Fabric'
  pod 'Crashlytics'
  pod 'Firebase'
  
  target 'xptoTests' do
    inherit! :search_paths
    # Pods for testing
    pod 'AWSAuth'
    pod 'AWSCore'
    pod 'AWSMobileClient'
    pod 'AWSPinpoint'
    pod 'Fabric'
    pod 'Crashlytics'
    pod 'Firebase'
    
  end
  
  target 'xptoUITests' do
    inherit! :search_paths
    # Pods for testing
    pod 'AWSAuth'
    pod 'AWSCore'
    pod 'AWSMobileClient'
    pod 'AWSPinpoint'
    pod 'Fabric'
    pod 'Crashlytics'
    pod 'Firebase'
  end
  
end
